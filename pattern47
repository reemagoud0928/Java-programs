import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int i,j,n;
    n=s.nextInt();
    for(i=1;i<=n;i++)
          {
              for(j=1;j<=i+(i-1);j++)
              {
                  
                 System.out.printf("* ");
              }
System.out.printf("\n");
          }

        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
